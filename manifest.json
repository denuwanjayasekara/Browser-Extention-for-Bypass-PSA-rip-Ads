{
  "manifest_version": 3,
  "name": "Ad Redirect Bypass (Auto) by Lanzy",
  "description": "Auto-bypass ad redirect landing pages by decoding URL-safe Base64 params and redirecting immediately (Manifest V3 compatible).",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Ad Bypass (Auto)"
  }
}